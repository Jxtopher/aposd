#ifndef REWARDOPERATOR_H
#define	REWARDOPERATOR_H

class RewardOperator {
public:
    RewardOperator(double reward, unsigned int _operator) :
        _reward(reward),
        __operator(_operator) {

    }

    virtual ~RewardOperator() {

    }

    void operator()(double reward, unsigned int _operator) {
        _reward = reward;
        _operator = __operator;
    }

    double getReward() {
        return _reward;
    }

    unsigned int getOperator() {
        return __operator;
    }

private:
    double _reward;
    unsigned int __operator;
};

#endif